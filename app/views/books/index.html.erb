<p id="notice"><%= notice %></p>
<h1><%= t ".Books" %></h1>
<table>
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:author) %></th>
      <th><%= Book.human_attribute_name(:memo) %></th>
      <th><%= Book.human_attribute_name(:picture) %></th>
      <th><%= Book.human_attribute_name(:updated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.memo %></td>
        <td><%= book.picture %></td>
        <td><%= l(book.created_at, format: :short) %></td>
        <td><%= link_to t("link.Show"), book %></td>
        <td><%= link_to t("link.Edit"), edit_book_path(book) %></td>
        <td><%= link_to t("link.Destroy"), book, method: :delete, data: { confirm: t("modal.confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to t(".New Book"), new_book_path %>
