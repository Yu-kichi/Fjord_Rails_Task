<h1>フォロワー一覧</h1>

<% @users.each do |user| %>
  <hr>
  <% if user.portrait.attached? %>
  <p><strong><div class="image_tag"><%= image_tag user.portrait.variant(resize_to_limit: [100, 100]) %>
  </div></strong></p>
<% end %>
  <p><span>name: </span><%= user.name%></p>
  <p><span>email: </span><%= link_to user.email, user_path(user.id) %></p>
  <p><span>introduction: </span><%= user.introduction%></p>
    <% if current_user != user %>
        <% if user.followed_by?(current_user) %>
            <p><%=link_to "フォロー済み", user_follow_followers_path(user.id), method: :delete %></p>
        <% else %>
            <p><%=link_to "フォローする", user_follow_followers_path(user.id), method: :post %></p>
        <% end %>
    <% end %>
<% end %>