<p>
  <h1>
    <strong><%= Report.human_attribute_name(:title) %></strong>
    <%= @report.title %>
  </h1>
</p>
<strong><p><%= Report.human_attribute_name(:user_id) %><strong>
<%= @user.name %></p>
