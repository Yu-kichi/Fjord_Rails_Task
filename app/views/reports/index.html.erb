<p>
  <% if @user %>
    <h1><%= t(".List_of_posted_reports_by", Contributor: "#{@user.name}") %></h1>
  <% else %>
    <h1><%= t ".Reports" %></h1>
  <% end %>
</p>
<br>
<table class="table table-hover">
  <thead>
    <tr class="thead-dark">
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:body) %></th>
      <th><%= Report.human_attribute_name(:user_id) %></th>
      <th><%= Report.human_attribute_name(:updated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.body.truncate(Constants::DISPLAYABLE_NUMBER_OF_CHARACTERS) %></td>
        <td><%= link_to report.user.name, user_reports_path(report.user.id) %></td>
        <td><%= l(report.created_at, format: :short) %></td>
        <td><button type="button" class="btn btn-outline-info btn-sm"><%= link_to t("link.Show"), report %></button></td>
        <% if current_user && current_user.id == report.user.id %>
          <td><button type="button" class="btn btn-outline-info btn-sm"><%= link_to t("link.Edit"), edit_report_path(report) %></button></td>
          <td><button type="button" class="btn btn-outline-danger btn-sm"><%= link_to t("link.Destroy"), report, method: :delete, data: { confirm: t("modal.confirm") } %></button></td>
        <% else %>
        <td></td><td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<div class="text-monospace bg-white">
  <% if current_user %>
    <button type="button" class="btn btn-outline-info"><%= link_to t(".New_report"), new_report_path %></button>
  <% end %>
  <div class="paginate mt-4"><%= paginate @reports %></div>
</div>
